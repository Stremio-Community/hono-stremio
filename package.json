{
  "name": "hono-stremio",
  "version": "0.1.2",
  "description": "A third-party Stremio Addon middleware for Hono",
  "deprecated": "This package is no longer maintained. Please use the Stremio Community Addon SDK instead: https://github.com/Stremio-Community/stremio-addon-sdk",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "vitest --run",
    "build": "tsup ./src/index.ts --format esm,cjs --dts",
    "release": "npm run build && npm test && npm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sleeyax/hono-stremio.git"
  },
  "homepage": "https://github.com/sleeyax/hono-stremio",
  "peerDependencies": {
    "hono": "*"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240725.0",
    "@hono/eslint-config": "^0.0.6",
    "@types/stremio-addon-sdk": "^1.6.11",
    "eslint": "^8.57.0",
    "hono": "^4.4.12",
    "prettier": "^2.8.8",
    "stremio-addon-sdk": "^1.6.10",
    "tsup": "^8.1.0",
    "typescript": "^5.3.3",
    "vitest": "^1.6.0"
  }
}
